<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="snhp.asu.edu.saladbar.Activities.TrayActivity"
    android:weightSum="1">

    <TextView
        android:textSize="35dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Scan Tray Barcode"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="5dp">

        <EditText
            android:id="@+id/trayIdEditText"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:ems="13"
            android:hint="Scan Tray Barcode"
            android:inputType="number"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="42dp" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:text="Add Tray"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>


    <TextView
        android:id="@+id/studentIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="42dp"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:text="Student ID: 1202548887"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:text="Tray IDs:"
        android:layout_marginStart="42dp"
        android:textAlignment="center"
        android:gravity="center_vertical"/>

    <ListView
        android:id="@+id/trayListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="42dp"/>

    <ImageView
        android:id="@+id/trayIdIssueTableImageView"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/tray_id_issue_table" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp" >

        <Button
            android:id="@+id/doneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:text="Go Back to Assent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</LinearLayout>
