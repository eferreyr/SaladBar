@model IEnumerable<SaladBarWeb.Models.DataEntryViewModels.InterventionDayTrayTypeViewModel>

@{
    ViewData["Title"] = "Tray Types";
}

<h2>Tray Type for Measurement</h2>

@Html.ActionLink("Add Tray Type", "AddInterventionDayTrayTypes", "DataEntry") | 
@Html.ActionLink("Edit Tray Types", "EditInterventionDayTrayTypes", "DataEntry")

@foreach (var item in Model)
{
    <div class="form-horizontal well">
        <div class="form-group">
            @Html.LabelFor(x => item.TrayTypeId, new { @class = "col-sm-2  control-label" })
            <div class="col-sm-10">
                <p class="form-control-static">@Html.DisplayFor(x => item.TrayType.Type)</p>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => item.InterventionDayId, new { @class = "col-sm-2  control-label" })
            <div class="col-sm-10">
                @{
                    var interventionDate = item.InterventionDay.DtIntervention.ToString("yyyy-MM-dd");
                }
                <p class="form-control-static">@Html.DisplayFor(x => item.InterventionDay.School.Name) @Html.DisplayFor(x => interventionDate)</p>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => item.Active, new { @class = "col-sm-2  control-label" })
            <div class="col-sm-10">
                <p class="form-control-static">@Html.DisplayFor(x => item.Active)</p>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => item.CreatedBy, new { @class = "col-sm-2  control-label" })
            <div class="col-sm-10">
                <p class="form-control-static">@Html.DisplayFor(x => item.CreatedBy)</p>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => item.ModifiedBy, new { @class = "col-sm-2  control-label" })
            <div class="col-sm-10">
                <p class="form-control-static">@Html.DisplayFor(x => item.ModifiedBy)</p>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => item.DtModified, new { @class = "col-sm-2  control-label" })
            <div class="col-sm-10">
                <p class="form-control-static">@Html.DisplayFor(x => item.DtModified)</p>
            </div>
        </div>
        @Html.ActionLink("Edit Tray Type", "EditInterventionDayTrayTypes", "DataEntry", new { interventionDayTrayTypeId = item.Id})
    </div>
}